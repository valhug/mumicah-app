{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mumicah/shared": ["../../packages/shared/src/index"],
      "@mumicah/shared/*": ["../../packages/shared/src/*"],
      "@mumicah/ui": ["../../packages/ui/src/index"],
      "@mumicah/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "scripts"
  ]
}
